<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/attraction_image"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/attraction_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ticket_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/visitor_counts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/book_5_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book 5 People" />

    <Button
        android:id="@+id/book_10_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book 10 People" />

    <Button
        android:id="@+id/book_20_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book 20 People" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />
</LinearLayout>
